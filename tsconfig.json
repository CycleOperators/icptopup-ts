{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    // below are for build process visibility
    "declaration": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "example/*"
  ]
}
