{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example/*"
  ]
}